{% load templatetag_handlebars %}
{% load i18n %}
{% load static %}


{% tplhandlebars "group" %}

    <h1>{{title}}</h1>
    <div id="group">
        {{#if slides }}
            {{view App.GroupPageBannerView }}
        {{/if }}
    </div>


    <style>
        #group ul li {
            height: 450px;
        }
    </style>

    <div class="l-section">
        <section class="l-wrapper">
            <ul class="project-member-list">
                {{#if members.length}}
                    <li class="project-member-supporters">
                        <h4>{% trans "Group Members" %}</h4>
                        <ul>
                            {{#each member in members}}
                                <a class="member" {{action 'openInBigBox' 'userModal' member }} {{bindAttr data-title="member.full_name"}}>
                                    <span class="member-avatar"><img {{bindAttr src="member.getAvatar" alt="member.full_name"}} /></span>
                                </a>
                            {{/each}}
                        </ul>
                    </li>
                {{/if}}
            </ul>

            <ul id="search-results">
                {{#each project in projects}}
                    {{render "projectPreview" project}}
                {{else}}
                    <li class="no-results">{% trans "No projects found." %}</li>
                {{/each}}
            </ul>
        </section>
    </div>


{% endtplhandlebars %}




