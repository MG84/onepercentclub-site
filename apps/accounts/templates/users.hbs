                                    <div class="radio3">{{view view.RadioButton value="male"}}<span>{% trans "Male" %}</span></div>
                                    <div class="radio3">{{view view.RadioButton value=""}}<span>{% trans "Unset" %}</span></div>
                                {{/view}}
                            </div>
