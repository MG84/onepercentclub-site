            {{else}}
                {{#if paymentMethod}}
                    <a href="#" {{action "proceedWithPayment"}} class="btn">{% trans "Proceed with Payment" %}</a>
                {{else}}
                    {% trans "No payment method selected" %}
                {{/if}}
            {{/if}}
