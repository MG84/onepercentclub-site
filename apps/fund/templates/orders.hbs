	<p>{% trans "You're about to support a 1%Project. Great! Did you know you can also share a little every month? How? Choose 'monthly' and become a 1%Friend!" %}</p>
	{{/if}}
</div>

{% endtplhandlebars %}



{% tplhandlebars "paymentProfile" %}
<div class="content">
	<form>
	    <fieldset>
	        {{#if model.isLoaded}}
	            <ul>
	                <li class="control-group">
	                    <label class="control-label">{% trans "Your full name" %}</label>
	                    <div class="controls">
	                        {{view Em.TextField valueBinding="firstName" placeholder="First name" class="inline-prepend" classBinding="errors.first_name.length:error"}}
